<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/bg_light</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_trans</item>
        <item name="android:background">@drawable/background_color</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingStart">@dimen/horizontal_margin</item>
        <item name="android:paddingTop">@dimen/vertical_half_margin</item>
        <item name="android:paddingBottom">@dimen/vertical_margin</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:fontFamily">cursive</item>
    </style>

    <style name="rating_bar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="title_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:elevation">2dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="card">
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardBackgroundColor">#00FFFFFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:layout_marginBottom">@dimen/vertical_half_margin</item>
        <item name="android:layout_marginTop">@dimen/vertical_half_margin</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="card_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/body_font</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:paddingTop">@dimen/vertical_half_margin</item>
        <item name="android:paddingBottom">@dimen/vertical_half_margin</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="business_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/body_font</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="quote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingBottom">@dimen/vertical_margin</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/title_font</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/primary</item>
    </style>

</resources>
